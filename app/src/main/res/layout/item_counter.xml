<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/counterListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/counterListItemDate"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:text="08-12-2017"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/counterListItemTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.501"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/counterListItemCurrentValue"
        android:layout_width="104dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="8dp"
        android:gravity="right|center"
        android:text="123"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/counterListItemViewButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/counterListItemEditButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintVertical_bias="0.501"
        tools:layout_editor_absoluteX="283dp" />

    <Button
        android:id="@+id/counterListItemViewButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="View"
        app:layout_constraintTop_toTopOf="@+id/counterListItemEditButton"
        app:layout_constraintRight_toLeftOf="@+id/counterListItemEditButton"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.501"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>